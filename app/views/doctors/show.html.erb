<h2>Doctor Page</h2>
<table>
    <thead>
        <tr>
            <th>Appointment Date and Time</th>
            <th>Patient</th>
        </tr>
    </thead>
    <tbody>
        <% @doctor.appointments.each do |app| %>
        <tr>
            <td><%= app.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></td>
            <td><%= link_to app.patient.name, patient_path(app.patient) %></td>
        </tr>
        <% end %>
</table> 