<h2>Patient Page</h2>
<table>
    <thead>
        <tr>
            <th>Appointment Date and Time</th>
            <th>Doctor</th>
        </tr>
    </thead>
    <tbody>
        <% @patient.appointments.each do |app| %>
        <tr>
            <td><%= app.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></td>
            <td><%= link_to app.doctor.name, doctor_path(app.doctor) %></td>
        </tr>
        <% end %>
</table> 